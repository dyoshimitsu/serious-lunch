<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="account_info">
        <%= render 'shared/account_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="lunch_form">
        <%= render 'shared/lunch_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Lunches Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Serious Lunch</h1>

  <h2>
    This is the home page for the lunch information sharing service.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
